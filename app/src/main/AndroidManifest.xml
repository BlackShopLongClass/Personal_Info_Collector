<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="blackstorelongclass.personal_info_collector">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DisplayMessageActivity"
            android:label="@string/title_activity_display_message"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="blackstorelongclass.personal_info_collector.MainActivity" />
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".Income"
            android:label="@string/title_activity_income"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DymaticAddViewActivity"
            android:label="@string/title_activity_dymatic_add_view"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DynamicAddViewActivity"
            android:label="@string/title_activity_dynamic_add_view"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".fillList"
            android:label="@string/title_activity_fill_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".selecttofill"
            android:label="@string/title_activity_selecttofill"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>